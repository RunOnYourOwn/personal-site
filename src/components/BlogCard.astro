---
// BlogCard component for displaying blog post previews
import type { CollectionEntry } from 'astro:content';
import Card from './Card.astro';

interface Props {
  post: CollectionEntry<'blog'>;
  featured?: boolean;
}

const { post, featured = false } = Astro.props;
const { slug, data, id } = post;
const { title, description, pubDate, tags, heroImage } = data;

// Get the file extension from the post id (same logic as search data)
const extension = id.split('.').pop() || 'md';

// Function to get themed color for tags
const getTagColor = (tag: string) => {
  const tagLower = tag.toLowerCase();

  // Data science tags
  if (
    tagLower.includes('data') ||
    tagLower.includes('ml') ||
    tagLower.includes('ai') ||
    tagLower.includes('python') ||
    tagLower.includes('pandas') ||
    tagLower.includes('pytorch')
  ) {
    return 'purple';
  }

  // Homelab/infrastructure tags
  if (
    tagLower.includes('homelab') ||
    tagLower.includes('docker') ||
    tagLower.includes('kubernetes') ||
    tagLower.includes('infrastructure') ||
    tagLower.includes('devops') ||
    tagLower.includes('monitoring')
  ) {
    return 'green';
  }

  // Project/development tags
  if (
    tagLower.includes('project') ||
    tagLower.includes('web') ||
    tagLower.includes('frontend') ||
    tagLower.includes('backend') ||
    tagLower.includes('fullstack') ||
    tagLower.includes('react')
  ) {
    return 'orange';
  }

  // Default to blue for other tags
  return 'blue';
};

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  }).format(date);
};
---

<Card
  href={`/blog/${slug}.${extension}/`}
  class={featured ? 'blog-card featured' : 'blog-card'}
>
  <div class="blog-card-image">
    {
      heroImage ? (
        <img src={heroImage.src} alt={title} loading="lazy" decoding="async" />
      ) : (
        <div class="blog-placeholder">
          <svg
            width="60"
            height="60"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
          >
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
            <polyline points="14,2 14,8 20,8" />
            <line x1="16" y1="13" x2="8" y2="13" />
            <line x1="16" y1="17" x2="8" y2="17" />
            <polyline points="10,9 9,9 8,9" />
          </svg>
        </div>
      )
    }
  </div>

  <div class="blog-card-content">
    <div class="blog-card-meta">
      <time datetime={pubDate.toISOString()}>
        {formatDate(pubDate)}
      </time>
      {
        tags.length > 0 && (
          <div class="blog-card-tags">
            {tags.slice(0, 3).map(tag => {
              const color = getTagColor(tag);
              return <span class={`tag tag-${color}`}>{tag}</span>;
            })}
          </div>
        )
      }
    </div>

    <h3 class="blog-card-title">{title}</h3>
    <p class="blog-card-description">{description}</p>

    <div class="blog-card-footer">
      <span class="read-more">Read more</span>
    </div>
  </div>
</Card>

<style>
  .blog-card {
    height: 100%;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    position: relative;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .blog-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      rgba(var(--accent-rgb), 0.1) 0%,
      rgba(139, 92, 246, 0.1) 25%,
      rgba(16, 185, 129, 0.1) 50%,
      rgba(245, 158, 11, 0.1) 75%,
      rgba(var(--accent-rgb), 0.1) 100%
    );
    opacity: 0;
    transition: opacity 0.4s ease;
    z-index: 1;
    border-radius: inherit;
  }

  .blog-card:hover::before {
    opacity: 1;
  }

  .blog-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow:
      0 20px 40px rgba(0, 0, 0, 0.1),
      0 0 0 1px rgba(var(--accent-rgb), 0.2),
      0 0 20px rgba(var(--accent-rgb), 0.1);
  }

  .blog-card.featured {
    grid-column: span 2;
  }

  .blog-card.featured:hover {
    transform: translateY(-12px) scale(1.03);
    box-shadow:
      0 25px 50px rgba(0, 0, 0, 0.15),
      0 0 0 1px rgba(var(--accent-rgb), 0.3),
      0 0 30px rgba(var(--accent-rgb), 0.2);
  }

  .blog-card-image {
    width: 100%;
    height: 200px;
    overflow: hidden;
    border-radius: 0.75rem;
    margin-bottom: 1.25rem;
    position: relative;
    z-index: 2;
  }

  .blog-card.featured .blog-card-image {
    height: 300px;
  }

  .blog-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    filter: brightness(1) saturate(1);
  }

  .blog-card:hover .blog-card-image img {
    transform: scale(1.08) rotate(1deg);
    filter: brightness(1.1) saturate(1.2);
  }

  .blog-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(
      135deg,
      var(--bg-secondary),
      var(--accent-light)
    );
    color: var(--text-secondary);
    border-radius: 0.75rem;
    transition: all 0.4s ease;
    position: relative;
    overflow: hidden;
  }

  .blog-placeholder::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(
      45deg,
      transparent,
      rgba(255, 255, 255, 0.1),
      transparent
    );
    transform: rotate(45deg);
    transition: all 0.6s ease;
  }

  .blog-card:hover .blog-placeholder {
    background: linear-gradient(135deg, var(--accent-light), var(--accent));
    color: white;
    transform: scale(1.05);
  }

  .blog-card:hover .blog-placeholder::before {
    transform: rotate(45deg) translate(100%, 100%);
  }

  .blog-card-content {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    position: relative;
    z-index: 2;
  }

  .blog-card-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    font-size: 0.875rem;
    color: var(--text-secondary);
    transition: color 0.3s ease;
  }

  .blog-card:hover .blog-card-meta {
    color: var(--accent);
  }

  .blog-card-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    padding: 0.375rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.75rem;
    font-weight: 500;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  /* Themed tag colors */
  .tag-blue {
    background: rgba(var(--accent-rgb), 0.1);
    color: var(--accent);
    border: 1px solid rgba(var(--accent-rgb), 0.2);
  }

  .tag-purple {
    background: rgba(var(--purple-rgb), 0.1);
    color: var(--purple);
    border: 1px solid rgba(var(--purple-rgb), 0.2);
  }

  .tag-green {
    background: rgba(var(--green-rgb), 0.1);
    color: var(--green);
    border: 1px solid rgba(var(--green-rgb), 0.2);
  }

  .tag-orange {
    background: rgba(var(--orange-rgb), 0.1);
    color: var(--orange);
    border: 1px solid rgba(var(--orange-rgb), 0.2);
  }

  .tag::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.2),
      transparent
    );
    transition: left 0.5s ease;
  }

  .blog-card:hover .tag-blue {
    background: var(--accent);
    color: white;
    border-color: var(--accent);
    transform: translateY(-2px);
  }

  .blog-card:hover .tag-purple {
    background: var(--purple);
    color: white;
    border-color: var(--purple);
    transform: translateY(-2px);
  }

  .blog-card:hover .tag-green {
    background: var(--green);
    color: white;
    border-color: var(--green);
    transform: translateY(-2px);
  }

  .blog-card:hover .tag-orange {
    background: var(--orange);
    color: white;
    border-color: var(--orange);
    transform: translateY(-2px);
  }

  .blog-card:hover .tag::before {
    left: 100%;
  }

  .blog-card-title {
    font-size: 1.25rem;
    font-weight: 700;
    margin: 0 0 1rem 0;
    color: var(--text-primary);
    line-height: 1.3;
    transition: all 0.3s ease;
    position: relative;
  }

  .blog-card.featured .blog-card-title {
    font-size: 1.75rem;
    font-weight: 800;
  }

  .blog-card:hover .blog-card-title {
    color: var(--accent);
    transform: translateX(4px);
  }

  .blog-card-description {
    color: var(--text-secondary);
    line-height: 1.6;
    margin: 0 0 1.5rem 0;
    flex-grow: 1;
    transition: color 0.3s ease;
  }

  .blog-card:hover .blog-card-description {
    color: var(--text-primary);
  }

  .blog-card-footer {
    margin-top: auto;
    position: relative;
  }

  .read-more {
    color: var(--accent);
    font-weight: 600;
    font-size: 0.875rem;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
    position: relative;
  }

  .read-more::after {
    content: 'â†’';
    transition: transform 0.3s ease;
  }

  .blog-card:hover .read-more {
    color: var(--accent-dark);
    transform: translateX(4px);
  }

  .blog-card:hover .read-more::after {
    transform: translateX(4px);
  }

  /* Dark mode styles */
  :global(.dark) .blog-card-meta {
    color: rgb(156, 163, 175);
  }

  :global(.dark) .blog-card:hover .blog-card-meta {
    color: var(--accent);
  }

  :global(.dark) .blog-card-title {
    color: white;
  }

  :global(.dark) .blog-card:hover .blog-card-title {
    color: var(--accent);
  }

  :global(.dark) .blog-card-description {
    color: rgb(209, 213, 219);
  }

  :global(.dark) .blog-card:hover .blog-card-description {
    color: white;
  }

  :global(.dark) .tag-blue {
    background: rgba(var(--accent-rgb), 0.2);
    color: var(--accent);
    border-color: rgba(var(--accent-rgb), 0.3);
  }

  :global(.dark) .tag-purple {
    background: rgba(var(--purple-rgb), 0.2);
    color: var(--purple);
    border-color: rgba(var(--purple-rgb), 0.3);
  }

  :global(.dark) .tag-green {
    background: rgba(var(--green-rgb), 0.2);
    color: var(--green);
    border-color: rgba(var(--green-rgb), 0.3);
  }

  :global(.dark) .tag-orange {
    background: rgba(var(--orange-rgb), 0.2);
    color: var(--orange);
    border-color: rgba(var(--orange-rgb), 0.3);
  }

  :global(.dark) .blog-placeholder {
    background: linear-gradient(
      135deg,
      rgb(31, 41, 55),
      rgba(var(--accent-rgb), 0.2)
    );
    color: rgb(156, 163, 175);
  }

  :global(.dark) .blog-card:hover .blog-placeholder {
    background: linear-gradient(135deg, var(--accent), var(--accent-dark));
    color: white;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .blog-card.featured {
      grid-column: span 1;
    }

    .blog-card.featured .blog-card-image {
      height: 200px;
    }

    .blog-card.featured .blog-card-title {
      font-size: 1.25rem;
    }

    .blog-card-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

    .blog-card:hover {
      transform: translateY(-4px) scale(1.01);
    }

    .blog-card.featured:hover {
      transform: translateY(-6px) scale(1.02);
    }
  }

  @media (max-width: 480px) {
    .blog-card:hover {
      transform: translateY(-2px) scale(1.005);
    }

    .blog-card.featured:hover {
      transform: translateY(-3px) scale(1.01);
    }
  }
</style>
