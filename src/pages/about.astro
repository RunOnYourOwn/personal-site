<style>
  .about-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .about-hero {
    text-align: center;
    margin-bottom: 4rem;
    padding: 2rem 0;
  }

  .about-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(var(--accent-rgb), 0.1);
    border: 1px solid rgba(var(--accent-rgb), 0.3);
    border-radius: 2rem;
    padding: 0.5rem 1rem;
    margin-bottom: 1.5rem;
  }

  .badge-icon {
    font-size: 1.25rem;
  }

  .badge-text {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--accent);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .about-title {
    font-size: 3rem;
    font-weight: 800;
    margin: 0 0 1rem 0;
    color: var(--text-primary);
    background: linear-gradient(135deg, var(--accent), #00ff88);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .about-subtitle {
    font-size: 1.25rem;
    color: var(--text-secondary);
    margin: 0;
    line-height: 1.6;
  }

  .about-content {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .about-section h2 {
    font-size: 2rem;
    font-weight: 700;
    margin: 0 0 1.5rem 0;
    color: var(--text-primary);
    border-bottom: 2px solid var(--accent);
    padding-bottom: 0.5rem;
  }

  .about-section p {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 1rem;
  }

  .skill-category {
    background: var(--bg-primary);
    border: 1px solid var(--border);
    border-radius: 1rem;
    padding: 1.5rem;
    transition: all 0.3s ease;
  }

  .skill-category:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    border-color: var(--accent);
  }

  .skill-category h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 1rem 0;
    color: var(--text-primary);
  }

  .skill-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .skill-tag {
    background: rgba(var(--accent-rgb), 0.1);
    color: var(--accent);
    border: 1px solid rgba(var(--accent-rgb), 0.3);
    padding: 0.375rem 0.75rem;
    border-radius: 0.5rem;
    font-size: 0.875rem;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .skill-tag:hover {
    background: var(--accent);
    color: white;
    border-color: var(--accent);
    transform: translateY(-1px);
  }

  .homelab-tech {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .tech-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem;
    background: rgba(var(--accent-rgb), 0.05);
    border: 1px solid rgba(var(--accent-rgb), 0.1);
    border-radius: 0.75rem;
    transition: all 0.3s ease;
  }

  .tech-item:hover {
    background: rgba(var(--accent-rgb), 0.1);
    border-color: rgba(var(--accent-rgb), 0.3);
    transform: translateY(-2px);
  }

  .tech-icon {
    font-size: 1.5rem;
  }

  .tech-name {
    font-weight: 500;
    color: var(--text-primary);
  }

  .certifications {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 1rem;
  }

  .cert-category {
    background: var(--bg-primary);
    border: 1px solid var(--border);
    border-radius: 1rem;
    padding: 1.5rem;
  }

  .cert-category h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 1rem 0;
    color: var(--accent);
  }

  .cert-category ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .cert-category li {
    padding: 0.5rem 0;
    color: var(--text-secondary);
    border-bottom: 1px solid var(--border);
  }

  .cert-category li:last-child {
    border-bottom: none;
  }

  /* Dark mode styles */
  :global(.dark) .about-title {
    color: white;
  }

  :global(.dark) .about-section h2 {
    color: white;
  }

  :global(.dark) .skill-category {
    background: rgb(31, 41, 55);
    border-color: rgb(55, 65, 81);
  }

  :global(.dark) .skill-category h3 {
    color: white;
  }

  :global(.dark) .cert-category {
    background: rgb(31, 41, 55);
    border-color: rgb(55, 65, 81);
  }

  :global(.dark) .tech-name {
    color: white;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .about-title {
      font-size: 2.5rem;
    }

    .skills-grid {
      grid-template-columns: 1fr;
    }

    .homelab-tech {
      grid-template-columns: 1fr;
    }

    .certifications {
      grid-template-columns: 1fr;
    }
  }
</style>
